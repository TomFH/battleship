{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}
