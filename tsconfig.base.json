{
    "compilerOptions": {
        "rootDir": ".",
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "es2021",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
